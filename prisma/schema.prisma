generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id            String            @id @default(cuid())
  product_id    String            @unique
  name          String
  description   String?
  model         String?
  sku           String?
  price         Decimal
  special       Decimal?
  quantity      Int
  stock_status  String
  manufacturer  String?
  image         String?
  images        String?
  options       String
  date_added    DateTime
  date_modified DateTime
  status        Boolean
  viewed        Int
  rating        Int
  reviews       Int
  url           String
  categories    ProductCategory[]
}

model Category {
  id          String            @id @default(cuid())
  category_id String            @unique
  name        String
  description String
  url         String
  products    ProductCategory[]
}

model ProductCategory {
  productId  String
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])
  product    Product  @relation(fields: [productId], references: [id])

  @@id([productId, categoryId])
}
